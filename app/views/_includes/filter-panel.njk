{% set filterOptionsHtml %}

  {{ govukCheckboxes({
    idPrefix: "filters[statuses]",
    name: "filters[statuses]",
    classes: "govuk-checkboxes--small",
    fieldset: {
      legend: {
        text: "Status",
        classes: "govuk-fieldset__legend--s"
      }
    },
    items: [{
      value: 'Not started',
      text: 'Not started'
    }, {
      value: 'Awaiting publication',
      text: 'Awaiting publication'
    }, {
      value: 'Not working',
      text: 'Not working'
    }, {
      value: 'Published',
      text: 'Published'
    }],
    values: data.filters.statuses
  }) }}

  {{ govukCheckboxes({
    idPrefix: "filters[organisations]",
    name: "filters[organisations]",
    classes: "govuk-checkboxes--small",
    fieldset: {
      legend: {
        text: "Organisation",
        classes: "govuk-fieldset__legend--s"
      }
    },
    items: [{
      value: 'Barnet',
      text: 'Barnet'
    }, {
      value: 'Southwark',
      text: 'Southwark'
    }, {
      value: 'Hertfordshire',
      text: 'Hertfordshire'
    }, {
      value: 'London',
      text: 'London'
    }],
    values: data.filters.organisations
  }) }}

{% endset %}

<div class="app-filter">
  <div class="app-filter__header">
    <div class="app-filter__header-title">
      <h2 class="govuk-heading-m">Filter</h2>
    </div>
    <div class="app-filter__header-action">

    </div>
  </div>
  <div class="app-filter__content">
    {% if selectedFilters.categories.length %}
      <div class="app-filter__selected">
        <div class="app-filter__selected-heading">
          <div class="app-filter__heading-title">
            <h2 class="govuk-heading-m govuk-!-margin-bottom-1">Selected filters</h2>
            <p class="govuk-body"><a class="govuk-link govuk-link--no-visited-state" href="/datasets/clear-filters">Clear filters</a></p>
          </div>
        </div>
        {% for category in selectedFilters.categories %}
          <h3 class="govuk-heading-s govuk-!-margin-bottom-0">{{ category.heading.text }}</h3>
          <ul class="app-filter-tags">
            {% for item in category.items %}
              <li><a class="app-filter__tag" href="{{item.href}}"><span class="govuk-visually-hidden">Remove this filter</span> {{item.text}}</a></li>
            {% endfor %}
          </ul>
        {% endfor %}
      </div>
    {% endif %}
    <div class="app-filter__options">
      <form method="get" action="/datasets" novalidate>
        <button class="govuk-button" data-module="govuk-button">
          Apply filters
        </button>
        {{filterOptionsHtml | safe}}
      </form>
    </div>
  </div>
</div>
